/* pages/showPrice/showPrice.wxss */
page {
  font-size: 8px;
  color: #333;
}
.container{
  align-items: center;
}
.table {
  border: 1px solid #dadada; 
  border-right: 0;
  border-bottom: 0;
  width: 98%;
}
.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size:12px;
}
.th,.td {
  padding: 10px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%;
}
.th {
  font-weight: 400;
  background-color: #dadada;
}