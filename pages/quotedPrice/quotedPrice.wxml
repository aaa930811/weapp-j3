<!--pages/quotedPrice/quotedPrice.wxml-->
<view class='container'>
  <form bindsubmit="formSubmit" bindreset="formReset">
   <view class="section" wx:if="{{hasUserInfo && canIUse}}">
      <view class="section__title">昵称</view>
      <input type="text" value="{{userInfo.nickName}}" />
    </view>
    <view class="section">
      <view class="section__title">服务器选择</view>
      <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
        <view class="picker">
          {{multiArray[0][multiIndex[0]]}}>{{multiArray[1][multiIndex[1]]}}
        </view>
        <text wx:if="{{sresult.data}}">{{sresult.data}}</text>
      </picker>
    </view>
    <view class="section">
      <view class="section__title">收售</view>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <view class="picker">
          {{array[index]}}
        </view>
      </picker>
    </view>
    <view class="section">
      <view class="section__title">物品名称</view>
      <input type="text" placeholder='请输入物品名称' />
    </view>
    <view class="section">
      <view class="section__title">价格（元）</view>
      <input type="digit" placeholder='请输入价格' />
    </view>
    <view class="section">
      <view class="section__title">成交时间</view>
      <picker mode="date" value="{{date}}" start="2015-09-01" end="{{today}}" bindchange="bindDateChange">
        <view class="picker">
          {{date}}
        </view>
      </picker>
    </view>
    <view class='section'>
      <view class="uploader">
        <view class="uploader-text" bindtap="doUpload">
          <text>上传交易截图</text>
          
        </view>
        <view class="uploader-container" wx:if="{{imgUrl}}">
          <image class="uploader-image" src="{{imgUrl}}" mode="aspectFit" bindtap="previewImg"></image>
        </view>
      </view>
    </view>
    <view class="btn-area">
      <button bindtap="formSubmit" type="primary" disabled="{{buttonDisabled}}" loading="{{loading}}">提交报价</button>
      <!-- <button formType="reset">重置</button> -->
    </view>
  </form>
</view>